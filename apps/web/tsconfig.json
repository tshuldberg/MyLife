{
  "extends": "@mylife/typescript-config/nextjs.json",
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "declarationMap": false,
    "types": [
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@mybooks-web/*": [
        "../../MyBooks/apps/web/*"
      ],
      "@mybooks/shared": [
        "../../MyBooks/packages/shared/src/index.ts"
      ],
      "@mybooks/shared/*": [
        "../../MyBooks/packages/shared/src/*"
      ],
      "@mybudget-web/*": [
        "../../MyBudget/apps/web/*"
      ],
      "@mybudget/shared": [
        "../../MyBudget/packages/shared/src/index.ts"
      ],
      "@mybudget/shared/*": [
        "../../MyBudget/packages/shared/src/*"
      ],
      "@mybudget/ui": [
        "../../MyBudget/packages/ui/src/index.ts"
      ],
      "@mybudget/ui/*": [
        "../../MyBudget/packages/ui/src/*"
      ],
      "@myhabits-web/*": [
        "../../MyHabits/apps/web/*"
      ],
      "@mywords-web/*": [
        "../../MyWords/apps/web/*"
      ],
      "@mywords/shared": [
        "../../MyWords/packages/shared/src/index.ts"
      ],
      "@mywords/shared/*": [
        "../../MyWords/packages/shared/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "test/**",
    "vitest.config.ts"
  ]
}
