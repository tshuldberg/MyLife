{
  "extends": "@mylife/typescript-config/react.json",
  "compilerOptions": {
    "strict": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "react",
      "react-dom"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "**/__tests__/**",
    "test/**",
    "vitest.config.ts"
  ]
}
